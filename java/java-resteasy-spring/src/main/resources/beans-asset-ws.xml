<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:beans="http://www.springframework.org/schema/beans"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
  	http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">


	<!-- Application Beans -->
	<bean id="petResource" class="io.swagger.sample.bean.PetResourceBean"/>

	<bean id="userResource" class="io.swagger.sample.bean.UserResourceBean"/>

	<bean id="petStoreResource" class="io.swagger.sample.bean.PetStoreResourceBean"/>

    <!-- Swagger Beans -->
    <bean id="apiListingResourceJSON" class="io.swagger.jaxrs.listing.ApiListingResource"/>
    <bean id="apiDeclarationProvider" class="io.swagger.jaxrs.listing.SwaggerSerializers"/>

    <!-- Swagger Configuration -->
    <bean id="beanConfig" class="io.swagger.jaxrs.config.BeanConfig">
        <property name="schemes" value="http" />
        <property name="filterClass" value="io.swagger.sample.util.ApiAuthorizationFilterImpl"/>
        <property name="resourcePackage" value="io.swagger.sample.resource"/>
        <property name="version" value="1.0.0"/>
        <property name="host" value="localhost:8002"/>
        <property name="basePath" value="/api"/>
        <property name="title" value="Swagger Petstore"/>
        <property name="description" value="This is a app."/>
        <property name="contact" value="apiteam@swagger.io"/>
        <property name="license" value="Apache 2.0"/>
        <property name="licenseUrl" value="http://www.apache.org/licenses/LICENSE-2.0.html"/>
        <property name="scan" value="true"/>
    </bean>

    <!-- API Origin Filter -->
    <bean id="apiOriginFilter" class="io.swagger.sample.util.ApiOriginFilter"/>
 </beans>
